<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task.id) %></li>
<%# <%= link_to "Delete", destroy_path(task.id), data: { confirm: "Are you sure you want to delete this task?" } %>
<%= link_to "Delete",
  destroy_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path  %>